<head>
  <link rel="stylesheet" href="/Content/css/bootstrap.css" type="text/css">
  <link rel="stylesheet" href="/Content/css/styles.css" type="text/css">
</head>
<div class="container">
  <div class="row">
    <h1>Address Book</h1>
    <div class="col-sm-4 col-sm-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Contact List</h4>
        </div>
        <div class="panel-body">
          @if(Model.Count == 0)
          {
            <p>You don't have any contacts yet. Click below to add one.</p>
          }
          <ul>
          @foreach(var contact in Model)
          {
            <li><a href="/contact/@contact.GetId()">@contact.GetFirstName() @contact.GetLastName()</a></li>
          }
          </ul>
          @if(Model.Count > 0)
          {
            <form action="/contacts/clear" method="post">
              <button type="submit">Clear all contacts<br><span class ="buttonSubtext">(This action cannot be undone.)</span></button>
            </form>
          }
        </div>
      </div>
      <p><a href="/contact/form">Add a new contact</a></p>
    </div>
  </div>
</div>
