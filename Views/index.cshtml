</head>
<h1>Address Book</h1>
@if(Model.Count == 0)
{
  <h3>You don't have any contacts yet. Click below to add one.</h3>
}
<ul>
@foreach(var contact in Model)
{
  <li><a href="/contact/@contact.GetId()">@contact.GetFirstName() @contact.GetLastName()</a></li>
}
</ul>
<p><a href="/contact/form">Add a new contact</a></p>
<form action="/contacts/clear" method="post">
  <p>Click this button to clear all contacts. <em>This action cannot be undone.</em></p>
  <button type="submit">Clear all contacts</button>
</form>
